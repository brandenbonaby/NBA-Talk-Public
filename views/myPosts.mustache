{{>header}}

{{>navigation}}


<div class="container" style="margin-top:30px">
  <h2 class="text-left">Here are your posts</h2>
  <div class="row">
    <div class="col-sm-9">
      {{#posts}}
        <div class="card">
          <h2>{{title}}</h2>
          <p><em><span class="font-italic">Posted</span> {{ date }}</em></p>
          {{{text}}}
          {{#location}}
            <img src={{{location}}} />
           {{/location}}
        </div>
      {{/posts}}
      {{#noPosts}}
        <div class="card ">
          <p class="font-weight-bold">{{noPosts}}</p>
        </div>
      {{/noPosts}}
    </div>
  </div>
</div> 

{{>footer}}
    